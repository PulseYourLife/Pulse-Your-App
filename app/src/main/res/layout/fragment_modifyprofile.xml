<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.Settings"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/imageViewm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:src="@tools:sample/avatars"
        android:contentDescription="TODO"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher"
        />

    <EditText
        android:id="@+id/editText_emailm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/colorPrimaryText"
        android:background="@drawable/border_modifystyle"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/editText_namem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:hint="Name"
        android:inputType="text"
        android:textColorHint="@color/colorPrimaryText"
        android:background="@drawable/border_modifystyle"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/editText_surnamem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:hint="Surname"
        android:inputType="text"
        android:textColorHint="@color/colorPrimaryText"
        android:background="@drawable/border_modifystyle"
        android:gravity="center"
        />



    <EditText
        android:id="@+id/editText_heightm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:hint="Height"
        android:inputType="number"
        android:textColorHint="@color/colorPrimaryText"
        android:background="@drawable/border_modifystyle"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/editText_weightm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:hint="Weight"
        android:inputType="number"
        android:textColorHint="@color/colorPrimaryText"
        android:background="@drawable/border_modifystyle"
        android:gravity="center"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_profileUpdatem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_rounded_corner"
            android:textColor="@color/colorPrimaryText"
            android:text="Modificar" />

        <Button
            android:id="@+id/button_profileSavem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_disabled_rounded_corner"
            android:textColor="@color/colorPrimaryText"
            android:clickable="false"
            android:text="Guardar" />
    </LinearLayout>


</LinearLayout>